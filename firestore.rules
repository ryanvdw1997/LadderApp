rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection rules
    match /users/{userId} {
      // Allow authenticated users to create their own user document
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      
      // Allow authenticated users to read user documents (needed for displaying emails in ladders)
      allow read: if request.auth != null;
      
      // Allow users to update their own document
      allow update: if request.auth != null && request.auth.uid == resource.data.uid;
    }
    
    // Allow authenticated users to create documents in users collection
    // (needed for initial sign up when document doesn't exist yet)
    match /users/{document=**} {
      allow create: if request.auth != null;
    }
    
    // Ladders collection rules
    match /ladders/{ladderId} {
      // Allow authenticated users to create ladders
      // Check that creator is in adminList and memberIds (denormalized array for security rules)
      // memberList contains full objects, memberIds contains just UIDs
      allow create: if request.auth != null 
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.adminList.hasAny([request.auth.uid])
        && (
          // New format: check memberIds array (denormalized)
          request.resource.data.memberIds.hasAny([request.auth.uid]) ||
          // Backward compatibility: check memberList if it's old format (array of strings)
          request.resource.data.memberList.hasAny([request.auth.uid])
        );
      
      // Allow users to read public ladders or ladders they're a member of
      // Check memberIds (new format) or memberList (old format for backward compatibility)
      allow read: if request.auth != null 
        && (
          resource.data.public == 1 ||
          // New format: check memberIds array (denormalized)
          request.auth.uid in resource.data.memberIds ||
          // Backward compatibility: check memberList if it's old format (array of strings)
          request.auth.uid in resource.data.memberList
        );
      
      // Allow authenticated users to list/query ladders (needed for requestCode uniqueness check)
      // This allows queries but individual documents still need to pass the read rule
      allow list: if request.auth != null;
      
      // Allow admins to update their ladders (can modify anything)
      // Also allow users to join ladders by adding themselves to memberList and memberIds
      // Also allow members to add team IDs when creating teams
      allow update: if request.auth != null 
        && (
          // Admin update (can modify anything)
          request.auth.uid in resource.data.adminList ||
          // User joining ladder (can only add themselves to memberList and memberIds)
          (
            // User's UID must be added to memberIds if not already present
            (request.auth.uid in resource.data.memberIds || 
             request.auth.uid in request.resource.data.memberIds) &&
            // User's UID must be in the new memberIds array
            request.auth.uid in request.resource.data.memberIds &&
            // Ensure user is not removing themselves (if they were in old memberIds, they must be in new)
            (!(request.auth.uid in resource.data.memberIds) || 
             request.auth.uid in request.resource.data.memberIds) &&
            // Only allow changes to memberList and memberIds fields
            request.resource.data.name == resource.data.name &&
            request.resource.data.type == resource.data.type &&
            request.resource.data.teamType == resource.data.teamType &&
            request.resource.data.adminList == resource.data.adminList &&
            request.resource.data.teamIds == resource.data.teamIds &&
            request.resource.data.joinCode == resource.data.joinCode &&
            request.resource.data.public == resource.data.public &&
            request.resource.data.createdBy == resource.data.createdBy &&
            request.resource.data.createdAt == resource.data.createdAt
          ) ||
          // Member adding team ID when creating team (can only add to teamIds)
          (
            request.auth.uid in resource.data.memberIds &&
            // Only allow adding to teamIds (not removing)
            (request.resource.data.teamIds.hasAll(resource.data.teamIds) ||
             !exists(resource.data.teamIds)) &&
            // All other fields unchanged
            request.resource.data.name == resource.data.name &&
            request.resource.data.type == resource.data.type &&
            request.resource.data.teamType == resource.data.teamType &&
            request.resource.data.adminList == resource.data.adminList &&
            request.resource.data.memberList == resource.data.memberList &&
            request.resource.data.memberIds == resource.data.memberIds &&
            request.resource.data.joinCode == resource.data.joinCode &&
            request.resource.data.public == resource.data.public &&
            request.resource.data.createdBy == resource.data.createdBy &&
            request.resource.data.createdAt == resource.data.createdAt
          )
        );
      
      // Allow admins to delete their ladders
      allow delete: if request.auth != null 
        && request.auth.uid in resource.data.adminList;
    }
    
    // Ladderteams collection rules
    match /ladderteams/{teamId} {
      // Allow authenticated users to create teams if they're a member of the ladder
      // and they're included in the team members
      allow create: if request.auth != null
        && request.auth.uid in request.resource.data.memberIds
        && request.resource.data.createdBy == request.auth.uid;
      
      // Allow ladder members to read teams in their ladders
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/ladders/$(resource.data.ladderId))
        && (
          // Check if ladder is public or user is a member
          get(/databases/$(database)/documents/ladders/$(resource.data.ladderId)).data.public == 1 ||
          request.auth.uid in get(/databases/$(database)/documents/ladders/$(resource.data.ladderId)).data.memberIds
        );
      
      // Allow list/query for authenticated users (needed for querying teams)
      allow list: if request.auth != null;
      
      // Allow team members to update their team (for points, rank, etc.)
      // Future: admins might also need to update teams
      allow update: if request.auth != null
        && request.auth.uid in resource.data.memberIds;
      
      // Allow team creators or ladder admins to delete teams
      allow delete: if request.auth != null
        && (
          request.auth.uid == resource.data.createdBy ||
          (
            exists(/databases/$(database)/documents/ladders/$(resource.data.ladderId))
            && request.auth.uid in get(/databases/$(database)/documents/ladders/$(resource.data.ladderId)).data.adminList
          )
        );
    }
  }
}
